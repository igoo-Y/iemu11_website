<%= render 'menu' %>

<div class="main-container">
  <h4>자원봉사 모집</h4>

  <h1 class="post-title">
    <%= @volunteer.title %>
  </h1>

  <span class="post-user-name"><%= @volunteer.user %></span>
  <span>
    <% if user_signed_in? %>
      <%= link_to '수정', edit_volunteer_path %> |
      <%= link_to '삭제', @volunteer, method: :delete, data: { confirm: '게시물을 삭제하시겠습니까?' }%>
    <%end %>
  </span>

  <div class="float-wrap">
    <p class="post-time-view"><%= @volunteer.created_at.strftime("%Y-%m-%d") %> , 조회수 <%= @volunteer.view_count.to_i %></p>
    <p class="post-list"><%= link_to '목록', volunteers_path %></p>
  </div>

  <div class="post-mid-line"></div>

  <p class="post-content">
    <%= @volunteer.content %>
  </p>

</div>