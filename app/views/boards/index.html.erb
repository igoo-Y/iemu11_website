<%= render 'menu' %>

<div class="main-container">
  <table class="board-normal">
    <thead>
    <tr>
      <th>번호</th>
      <th>제목</th>
      <th>작성자</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td><%= link_to board.title, board %></td>
        <td><%= board.user_id %></td>
        <td><%= link_to '열기', board %></td>
        <td><%= link_to '수정', edit_board_path(board) %></td>
        <td><%= link_to '삭제', board, method: :delete, data: { confirm: 'Are you sure board?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<br>

  <%= link_to '새 카테고리', new_board_path %>

</div>
