<%= render 'menu' %>

<div class="main-container">

  <h2>공지사항</h2>
  <table class="post-normal">
    <thead>
      <tr>
        <th>제목</th>
        <th>내용</th>
        <th>조회수</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.view_count %></td>
          <td><%= link_to '열기', post %></td>
          <td><%= link_to '수정', edit_post_path(post) %></td>
          <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure post?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '새 글 쓰기', new_post_path %>

</div>