<%= render 'menu' %>

<div class="main-container">

  <h2>게시물</h2>
  <table class="post-normal">
    <thead>
      <tr>
        <th>제목</th>
        <th>내용</th>
        <th>조회수</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr class="table-news">
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.view_count %></td>
          <td><%= link_to '열기', (@board.present? ? [post.board, post] : post) %></td>
          <td><%= link_to '수정', (@board.present? ? edit_board_post_path(post.board, post) : edit_post_path(post)) %></td>
          <td><%= link_to '삭제', (@board.present? ? [post.board, post] : post), method: :delete, data: { confirm: 'Are you sure post?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%#= paginate @posts %>
  <br>

  <div class="float-wrap">
  <%= link_to '새 글 쓰기', (@board.present? ?  new_board_post_path(@board) : new_post_path), class: "new-btn" %>
  </div>
</div>