<%= render 'menu' %>

<div class="main-container">
  <h2><%= @post.board.title %></h2>

  <h2 class="post-title">
    <%= @post.title %>
  </h2>

  <span class="post-user-name"><%= @post.user_name %></span>
  <span>
    <%= link_to '수정', (@board.present? ? edit_board_post_path(@board)  : edit_post_path(@post)) %> |
    <%= link_to '삭제', (@board.present? ? [@post.board, @post] : @post), method: :delete, data: { confirm: '게시물을 삭제하시겠습니까?' }%>
  </span>

  <div class="float-wrap">
    <p class="post-time-view"><%= @post.created_at.strftime("%Y-%m-%d") %> , 조회수 <%= @post.view_count.to_i %></p>
    <p class="post-list"><%= link_to '목록', board_path(@post.board) %></p>
  </div>

  <div class="post-mid-line"></div>

  <p class="post-content">
    <%= @post.content %>
  </p>


</div>